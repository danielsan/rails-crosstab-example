

<h1>Welcome#index</h1>
<p>Find me in app/views/welcome/index.html.erb</p>

<table>
  <caption>Crosstab</caption>
  <thead>
    <tr>
      <th>Cities</th>
    <% @uniqProducts.keys.each do |productName| %>
      <th><%= productName %></th>
    <% end %>
    </tr>
  </thead>
  <tbody>
    <% @myCities.each_pair do |cityName, cityProducts| %>
    <tr>
      <td><%= cityName %></td>
      <% @uniqProducts.keys.each do |productName| %>
      <td class="number"><%= cityProducts[ productName ] %></td>
      <% end #uniqProducts.keys %>
    </tr>
    <% end #myCities.each_with_keys %>
  </tbody>
</table>

<table>
  <caption>Original</caption>
  <thead>
    <tr>
      <th>city</th>
      <th>product</th>
      <th>count</th>
    </tr>
  </thead>
  <tbody>
  <% @list.each do |row| %>
    <tr>
      <td><%= row[:city] %></td>
      <td><%= row[:product] %></td>
      <td class="number"><%= row[:count] %></td>
    </tr>
  <% end # list.each %>
  </tbody>
</table>